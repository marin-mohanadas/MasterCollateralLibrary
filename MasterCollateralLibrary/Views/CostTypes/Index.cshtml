<h2>Component Cost Types</h2>
<div ng-controller="costTypesController">
    <br />
    <div class="row">
        <div class="col-md-1"><button class="btn btn-warning" ng-click="newBtnClicked()">New</button></div>        
    </div>
    <br />
    <table class="table table-hover table-striped">
        <thead>
            <tr>     
                <th>ID</th>
                <th style="cursor:pointer" ng-click="doSortBy('cst_type_desc')"><i ng-class="sortIcon('cst_type_desc')"></i>Description</th>
                <th style="cursor:pointer" ng-click="doSortBy('cst_type_mu')"><i ng-class="sortIcon('cst_type_mu')"></i>Markup</th>
            </tr>
            <tr>
                <th></th>
                <th><input type="text" ng-model="param.cst_type_desc" ng-change="filterChanged()" /></th>
                <th><input type="text" ng-model="param.cst_type_mu" ng-change="filterChanged()" /></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in items">                
                <td width="100px">{{item.id}}</td>
                <td>
                    <span ng-show="item.id !== selectedLine.id">{{item.cst_type_desc}}</span>
                    <input type="text" ng-show="selectedLine.id === item.id" ng-model="selectedLine.cst_type_desc" />
                </td>
                <td>
                    <span ng-show="item.id !== selectedLine.id">{{item.cst_type_mu}}</span>
                    <input type="number" ng-show="selectedLine.id === item.id" ng-model="selectedLine.cst_type_mu" />
                </td>
                <td style="width:50px">
                    <i class="glyphicon glyphicon-pencil" style="cursor:pointer" ng-hide="selectedLine.id === item.id" ng-click="editBtnClicked(item)"></i>
                    <i class="glyphicon glyphicon-ok" style="cursor:pointer" ng-show="item.id === selectedLine.id" ng-click="editBtnOkClicked(item)"></i>
                    <i class="glyphicon glyphicon-remove" style="cursor:pointer" ng-show="item.id === selectedLine.id" ng-click="editBtnCancelClicked(item)"></i>
                    <i class="glyphicon glyphicon-trash" style="cursor:pointer" ng-hide="item.id === selectedLine.id" ng-click="deleteBtnClicked(item)"></i>
                </td> 
            </tr>
        </tbody>
    </table>
    <ul uib-pagination class="pagination-sm" total-items="total" num-pages="numberPages" ng-model="param.PageNumber" ng-change="pageChanged()" 
        max-size="maxSize" boundary-links="true" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></ul>
</div>