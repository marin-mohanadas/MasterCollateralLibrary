<h2>Boxes for Packs</h2>
<div ng-controller="boxesController">
    <br />
    <div class="row">
        <div class="col-md-1"><button class="btn btn-warning" ng-click="newBtnClicked()">New</button></div>        
    </div>
    <br />
    <table class="table table-hover table-striped">
        <thead>
        <tr>     
            <th>ID</th>
            <th style="cursor:pointer" >Description</th>
            <th style="cursor:pointer" >Brand</th>
            <th style="cursor:pointer" >L (cm)</th>
            <th style="cursor:pointer" >W (cm)</th>
            <th style="cursor:pointer" >H (cm)</th>
            <th style="cursor:pointer" >Weight (kg)</th>
            <th style="cursor:pointer" >Active</th>
        </tr>

