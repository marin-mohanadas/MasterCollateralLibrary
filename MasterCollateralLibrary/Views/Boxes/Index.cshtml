        </thead>
        <tbody>
            <tr ng-repeat="item in items">                
                <td width="100px">{{item.id}}</td>
                <td>
                    <span ng-show="item.id !== selectedLine.id">{{item.box_desc}}</span>
                    <input type="text" ng-show="selectedLine.id === item.id" ng-model="selectedLine.box_desc" />
                </td>
                <td>
                    <span ng-show="item.id !== selectedLine.id">{{item.box_brand}}</span>
                    <input type="text" ng-show="selectedLine.id === item.id" ng-model="selectedLine.box_brand" />
                </td>
                <td>
                    <span ng-show="item.id !== selectedLine.id">{{item.box_lngth}}</span>
                    <input type="number" ng-show="selectedLine.id === item.id" ng-model="selectedLine.box_lngth" />
                </td>
                <td>
                    <span ng-show="item.id !== selectedLine.id">{{item.box_wdth}}</span>
                    <input type="number" ng-show="selectedLine.id === item.id" ng-model="selectedLine.box_wdth" />
                </td>
                <td>
                    <span ng-show="item.id !== selectedLine.id">{{item.box_hght}}</span>
                    <input type="number" ng-show="selectedLine.id === item.id" ng-model="selectedLine.box_hght" />
                </td>
                <td>
                    <span ng-show="item.id !== selectedLine.id">{{item.box_wght}}</span>
                    <input type="number" ng-show="selectedLine.id === item.id" ng-model="selectedLine.box_wght" />
                </td>
                <td>
                    <input type="checkbox" ng-show="selectedLine.id !== item.id" ng-disabled="selectedLine.id !== item.id" ng-model="item.box_active" />
                    <input type="checkbox" ng-show="selectedLine.id === item.id" ng-model="selectedLine.box_active"/>
                </td>
                <td style="width:50px">
                    <i class="glyphicon glyphicon-pencil" style="cursor:pointer" ng-hide="selectedLine.id === item.id" ng-click="editBtnClicked(item)"></i>
                    <i class="glyphicon glyphicon-ok" style="cursor:pointer" ng-show="item.id === selectedLine.id" ng-click="editBtnOkClicked(item)"></i>
                    <i class="glyphicon glyphicon-remove" style="cursor:pointer" ng-show="item.id === selectedLine.id" ng-click="editBtnCancelClicked(item)"></i>
                    <i class="glyphicon glyphicon-trash" style="cursor:pointer" ng-hide="item.id === selectedLine.id" ng-click="deleteBtnClicked(item)"></i>
                </td> 
            </tr>
        </tbody>
    </table>
    <ul uib-pagination class="pagination-sm" total-items="total" num-pages="numberPages" ng-model="param.PageNumber" ng-change="pageChanged()" 
        max-size="maxSize" boundary-links="true" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></ul>
</div>