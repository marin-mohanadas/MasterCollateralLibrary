<div ng-controller="vendorController">
    <br />
    <div class="row">
        <div class="col-md-1"><button class="btn btn-warning" ng-click="clear()">Clear</button></div>
        <div class="col-md-1"><button class="btn btn-primary" ng-click="save()">Save</button></div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                <label for="">Vendor ID</label>
                <input type="text" class="form-control" ng-model="item.id" readonly>
            </div>
        </div>
        <div class="col-md-1">
            <div class="form-group">
                <label for="">&nbsp;</label>
                <button type="submit" class="btn btn-default form-control" ng-click="openSearch()">Search</button>
            </div>
        </div>
        <div class="col-md-9">&nbsp;</div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Parent Name</label>
                <input type="text" class="form-control" ng-model="item.vend_parent_name">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Child / Subsidiary Name</label>
                <input type="text" class="form-control" ng-model="item.vend_child_name">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Street 1</label>
                <input type="text" class="form-control" ng-model="item.vend_street1">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Street 2</label>
                <input type="text" class="form-control" ng-model="item.vend_street2">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="">City</label>
                <input type="text" class="form-control" ng-model="item.vend_city">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="">State</label>
                <input type="text" class="form-control" ng-model="item.vend_state">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label for="">Zip</label>
                <input type="text" class="form-control" ng-model="item.vend_zip">
            </div>
        </div>
    </div>
    <!--
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label for="">Label (print) Name</label>
                <input type="text" class="form-control" ng-model="item.vend_label_name">
            </div>
        </div>
    </div>
    -->
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Country</label>
                <input type="text" class="form-control" ng-model="item.vend_country">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Notes / Memo</label>
                <textarea rows="2" class="form-control" ng-model="item.vend_memo"></textarea>
            </div>
        </div>
    </div>

    <uib-tabset active="active">
        <uib-tab index="0" heading="Vendor Contact Details">
            <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Contact Last Name</label>
                        <input type="text" class="form-control" ng-model="item.tbl_vendDtl[0].vendDtl_conct_lname">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Contact First Name</label>
                        <input type="text" class="form-control" ng-model="item.tbl_vendDtl[0].vendDtl_conct_fname">
                    </div>
                </div>
            </div>            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Contact Email</label>
                        <input type="email" class="form-control" ng-model="item.tbl_vendDtl[0].vendDtl_conct_email">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Contact Phone</label>
                        <input type="text" class="form-control" ng-model="item.tbl_vendDtl[0].vendDtl_conct_phone">
                    </div>
                </div>
            </div>            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Contact Mobile</label>
                        <input type="text" class="form-control" ng-model="item.tbl_vendDtl[0].vendDtl_conct_mobile">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Notes / Memo</label>
                        <textarea rows="2" class="form-control" ng-model="item.tbl_vendDtl[0].vendDtl_conct_notes"></textarea>
                    </div>
                </div>
            </div>            
        </uib-tab>
        <uib-tab index="1" heading="Components for Vendor">
            <br />
            <div style="overflow:auto;max-height:400px">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Component ID</th>
                            <th>Vendor Part Number</th>
                            <th>Description (orig)</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in components">
                            <td>{{item.id}}</td>
                            <td>{{item.comp_vend_pn}}</td>
                            <td>{{item.comp_desc_orig}}</td>                            
                        </tr>
                    </tbody>
                </table>
                <ul uib-pagination class="pagination-sm" items-per-page="param.PageSize" total-items="total" num-pages="numberPages" ng-model="param.PageNumber" ng-change="pageChanged()"
                    max-size="maxSize" boundary-links="true" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></ul>
            </div>
        </uib-tab>
    </uib-tabset>

</div>