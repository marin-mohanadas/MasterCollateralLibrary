<h2>Pack Formulas</h2>
<div ng-controller="packFormulasIndexController">
    <br />
    <div class="row">
        <div class="col-md-1"><button class="btn btn-warning" ng-click="newBtnClicked()">New</button></div>        
    </div>
    <br />
    <table class="table table-hover table-striped">
        <thead>
            <tr>     
                <th rowspan="2">ID</th>
                <th style="cursor:pointer" ng-click="doSortBy('formula_name')"><i ng-class="sortIcon('formula_name')"></i>Name</th>
            </tr>
            <tr>
                <th><input type="text" ng-model="param.formula_name" ng-change="filterChanged()" /></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="item in items">                
                <td width="100px"><span style="cursor:pointer" ng-click="editBtnClicked(item)">{{item.id}}</span></td>
                <td>{{item.formula_name}}</td>
                <td>                    
                    <i class="glyphicon glyphicon-trash" style="cursor:pointer" ng-click="deleteBtnClicked(item)"></i>
                </td>

            </tr>
        </tbody>
    </table>
    <ul uib-pagination class="pagination-sm" total-items="total" items-per-page="param.PageSize" num-pages="numberPages" ng-model="param.PageNumber" ng-change="pageChanged()" 
        max-size="maxSize" boundary-links="true" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></ul>
</div>